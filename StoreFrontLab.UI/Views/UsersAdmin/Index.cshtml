@model IEnumerable<StoreFrontLab.UI.Models.ApplicationUser>

@{
    ViewBag.Title = "Users";
}

<h2>@ViewBag.Title</h2>

<a href="@Url.Action("Create","UsersAdmin")" class="text-center"><p><i class="fas fa-plus-square">Add User</i></p></a>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "fas fa-edit" }) |
                @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "fas fa-info-circle" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "fas fa-trash-alt" })
            </td > 
</tr>
    }

</table>
