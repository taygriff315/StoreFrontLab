        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
      
                <a href="@Url.Action("Index","Products")" class="btn btn-primary">Back to List</a>
           
