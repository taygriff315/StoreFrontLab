@model StoreFrontLab.Data.EF.Product

@{
    ViewBag.Title = "Edit";
}
<div class="text-center">
<h2>Edit</h2>
</div>
@using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
